{% extends 'base.html.twig' %}

{% block title %}Mise à jour d'une annonce{% endblock %}

{% form_theme form 'advert/_collection.html.twig' %}

{% block body %}
   <div class="container">
       <h1 class="text-center">Mise à jour de l'annonce: {{ advert.title }}</h1>
       {{ include('advert/_form.html.twig', {'button_label': "Mettre à jour l'annonce"}) }}
       <div class="row ">
           <div class="col">
               <a href="{{ path('advert_index') }}" class="btn btn-secondary">Retour aux annonces</a>
           </div>
           {% if app.user and app.user == advert.author %}
               <div class="col">
                   {% include'partials/_delete_form.html.twig' with
                       {'route': 'advert_delete', 'param': {'id': advert.id}, 'id': advert.id}
                   %}
               </div>
           {% endif %}
       </div>
   </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('advert') }}
{% endblock %}
