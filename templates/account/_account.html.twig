<div class="container mb-4">
    <div class="row align-items-center">
        <div class="col-3 text-center">
            {% if user.avatarUrl %}
            <img src="{{ user.avatarUrl }}" class="rounded-circle mb-3" alt="Avatar de {{ user.fullName }} "><br>
            {% else %}
            <img src="{{ '/images/avatar_profile.png' }}" class="rounded-circle mb-3" alt="Avatar de {{ user.fullName }} "><br>
            {% endif %}
            <span class="badge badge-secondary py-3 px-4" style="font-size: 1.2em">
              {{ user.adverts | length }} {% if  user.adverts | length > 1 %} annonces {% else %} annonce {% endif %}
            </span>
        </div>
        <div class="col-9 ">
            <h1>{{ user.fullName }}</h1>
            {% if user is same as(app.user) %}
                <div class="mt-3">
                    <a href="{{ path('account_profile_edit', {'id': app.user.id}) }}" class="btn btn-secondary mr-2 mb-2">Modifier mes informations</a>
                    <a href="{{ path('account_password_edit', {'id': app.user.id}) }}" class="btn btn-secondary mb-2">Modifier mon mot de passe</a>
                </div>
            {% endif %}
        </div>
        <div class="mt-3">
            {{ user.description | raw }}
        </div>
    </div>
    <hr>
    <h2 class="text-center mt-3 mb-4">Les annonces de {{ user.fullName }}</h2>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
        {% for advert in user.adverts %}
            {% include('advert/_advert.html.twig') %}
        {% else %}
            <div class="alert alert-warning text-center mt-5 mb-5">
                <p>{{user.fullName}} n'a aucune annonce publi√©e sur Mini airbnb</p>
            </div>
        {% endfor %}
    </div>
</div>