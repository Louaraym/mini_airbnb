{% extends 'base.html.twig' %}

{% block title %}Modification du mot de passe{% endblock %}

{% block body %}
    <div class="container" style="margin-bottom: 250px">
       <div class="row">
           <div class="col-md-3">&nbsp</div>
           <div class="col-md-6 py-3 px-3">
               <h1 class="text-center mb-3">Modifier votre password</h1>
               {{ form_start(form) }}
               {{ form_widget(form) }}
               <div class="form-group text-center mt-4">
                   <button class="btn btn-secondary ">Soumettre la modification</button>
               </div>
               {{ form_end(form) }}
           </div>
       </div>
    </div>
{% endblock %}