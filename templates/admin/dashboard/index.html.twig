{% extends 'admin/base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}

    <div class="container-fluid mt-4" style="margin-bottom: 65px">
        <div class="row">
            <div class="col-md-3 col-sm-6">
                <div class="card bg-primary text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-2">
                                <i class="fas fa-users fa-2x"></i>
                            </div>
                            <div class="col-10">
                                <h4 class="card-title"> {{ stats.users }} utilisateurs inscrits</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="card text-white bg-dark mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-2">
                                <i class="fas fa-hotel fa-2x"></i>
                            </div>
                            <div class="col-10">
                                <h4 class="card-title">{{ stats.adverts }} annonces postées</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="card text-white bg-warning mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-2">
                                <i class="fas fa-folder fa-2x"></i>
                            </div>
                            <div class="col-10">
                                <h4 class="card-title"> {{ stats.bookings }} réservations prises</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="card text-white bg-success mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-2">
                                <i class="fas fa-comments fa-2x"></i>
                            </div>
                            <div class="col-10">
                                <h4 class="card-title"> {{ stats.comments }} commentaires postés</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col">
                <div class="alert alert-success">
                    <h2 class="alert-heading my-3"><i class="fas fa-arrow-up"></i> Les annonces populaires</h2>

                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>Annonce</th>
                            <th>Poprio</th>
                            <th>Moyenne</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for advert in bestAdverts %}
                            <tr>
                                <td>{{advert.title}}</td>
                                <td>
                                    <img src="{{advert.avatarUrl}}" alt="" class="avatar avatar-small"> {{advert.firstName}} {{advert.lastName}}
                                </td>
                                <td class="text-center">
                                <span class="badge badge-dark">
                                    {{advert.note | number_format(1, ",", " ")}}
                                </span>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col">
                <div class="alert alert-danger">
                    <h2 class="alert-heading my-3"><i class="fas fa-arrow-down"></i> Les pires annonces</h2>

                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>Annonce</th>
                            <th>Poprio</th>
                            <th>Moyenne</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for advert in worstAdverts %}
                            <tr>
                                <td>{{advert.title}}</td>
                                <td>
                                    <img src="{{advert.avatarUrl}}" alt="" class="avatar avatar-small"> {{advert.firstName}} {{advert.lastName}}
                                </td>
                                <td class="text-center">
                                <span class="badge badge-dark">
                                    {{advert.note | number_format(1, ",", " ")}}
                                </span>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
