{% extends 'admin/base.html.twig' %}

{% block title %}Administration des commentaires!{% endblock %}

{% block body %}
    <div class="container-fluid text-center">
        <h1 class="my-2">Gestion des commentaires</h1>
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Auteur</th>
                <th>Commentaire</th>
                <th>Note</th>
                <th>Annonce</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for comment in comments %}
                <tr>
                    <td>{{ comment.id }}</td>
                    <td>{{ comment.createdAt | date('d/m/Y à H:i') }}</td>
                    <td>
                        <img src="{{ comment.author.avatarUrl }}"
                             alt="Avatar de {{ comment.author.fullName }}"
                             class="rounded-circle avatar-small"
                        >
                        {{ comment.author.fullName }}
                    </td>
                    <td >
                        {{ comment.content  }}
                    </td>
                    <td>
                    <span class="badge badge-primary rounded py-1 px-3">
                        {{ comment.rating }}
                    </span>
                    </td>
                    <td>{{ comment.advert.title }}</td>
                    <td>
{#                        <a href="{{ path('comment_show', {'slug': comment.slug, 'id': comment.id}) }}">#}
{#                            <i class="fas fa-eye  mr-2" style="font-size: 1.5em"></i>#}
{#                        </a>#}
                        <a href="{{ path('admin_comment_edit', {'id': comment.id}) }}" title="éditer l'annonce">
                            <i class="fas fa-edit mr-2" style="font-size: 1.5em"></i>
                        </a>
                        <a href="#" title="supprimer le commentaire">
                            <i class="fas fa-trash" style="font-size: 1.5em; color: red"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center">Aucune annonce rétrouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

