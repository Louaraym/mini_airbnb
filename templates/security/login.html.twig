{% extends 'base.html.twig' %}
{% block title %}Log in!{% endblock %}

{% block body %}
<div class="container" style="margin-bottom: 280px; margin-top: 50px">
    <div class="row">
        <div class="col-md-3">&nbsp</div>
        <div class="col-md-6">
           <div class="bg-light py-3 px-3">
               <form method="post">
                   {% if error %}
                       <div class="alert alert-danger text-center">
                           {{ error.messageKey|trans(error.messageData, 'security') }}
                       </div>
                   {% endif %}
                   <h1 class="h3 mb-3 font-weight-normal text-center">
                       Please sign in
                   </h1>
                  <div class="form-group">
                      <label for="inputEmail">Email</label>
                      <input
                              type="email"
                              value="{{ last_username }}"
                              name="email" id="inputEmail"
                              class="form-control"
                              required autofocus
                      >
                  </div>

                  <div class="form-group">
                      <label for="inputPassword">Password</label>
                      <input type="password" name="password" id="inputPassword" class="form-control" required>
                  </div>

                   <input type="hidden" name="_csrf_token"
                          value="{{ csrf_token('authenticate') }}"
                   >

                   <div class="checkbox mb-3">
                       <label>
                           <input type="checkbox" name="_remember_me"> Remember me
                       </label>
                   </div>

                   <button class="btn btn-lg btn-secondary" type="submit">
                       Sign in
                   </button>
                   <a href="{{ path('app_register') }}" class="btn btn-link">Je n'ai pas encore de compte !</a>
               </form>
           </div>
        </div>
    </div>
</div>
{% endblock %}
